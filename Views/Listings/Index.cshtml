@model PaginatedList<Auctions.Models.Listing>

@{
    ViewData["Title"] = "Index";
}

<div class="container-category">

    <div class="row-category">
        <div class="col-category">
            <a asp-action="Tech" asp-controller="Category" class="btn btn-outline-primary">Техника</a>
        </div>
        <div class="col-category">
            <a asp-action="Vintage" asp-controller="Category" class="btn btn-outline-primary">Винтаж</a>
        </div>
        <div class="col-category">
            <a asp-action="Art" asp-controller="Category" class="btn btn-outline-primary">Искусство</a>
        </div>
        <div class="col-category">
            <a asp-action="Books" asp-controller="Category" class="btn btn-outline-primary">Книги</a>
        </div>
        <div class="col-category">
            <a asp-action="Fashion" asp-controller="Category" class="btn btn-outline-primary">Мода</a>
        </div>
        <div class="col-category">
            <a asp-action="Music" asp-controller="Category" class="btn btn-outline-primary">Музыка</a>
        </div>
        <div class="col-category">
            <a asp-action="Antiques" asp-controller="Category" class="btn btn-outline-primary">Антиквариат</a>
        </div>
    </div>
</div>

<h2>Активные лоты</h2>

@foreach(var listing in Model)
{
    <div class="container-lot">
        <div class="row">
            <div class="col col-xs-6 col-lg-5">
                <img src="~/Images/@listing.ImagePath" style="max-width: 400px; max-height: 400px;" />
            </div>
            <div class="col col-xs-6 col-lg-7">
                <h5><a asp-action="Details" asp-route-id="@listing.Id" style="color: black;">@listing.Title</a></h5>
                <div>@listing.Category</div>
                <div>@listing.Description</div>
                <div>Ставок: $@listing.Price.ToString("N2")</div>
                <div>Лот от: @listing.User.Email</div>
            </div>
        </div>

    </div>
}
@if(!Model.Any())
{
    <p>На данный момент никто не разместил лот</p>
}

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="d-flex justify-content-center">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-default @prevDisabled">
        Предыдущая
    </a>
    <div class="btn" style="cursor: default">
        Страница @Model.PageIndex из @Model.TotalPages
    </div>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-default @nextDisabled">
        Следующая
    </a>
</div>
